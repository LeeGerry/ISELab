<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/top"/>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
        card_view:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvLeverTip"
                    android:layout_width="@dimen/item_title_width"
                    android:layout_height="wrap_content"
                    android:text="Lever Arm (in.)"
                    android:textSize="@dimen/info_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLever"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_context_margin_left"
                    android:layout_weight="1"
                    android:text="data1"
                    android:textSize="@dimen/info_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvLoadTip"
                    android:layout_width="@dimen/item_title_width"
                    android:layout_height="wrap_content"
                    android:text="Load (lbs.)"
                    android:textSize="@dimen/info_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLoad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_context_margin_left"
                    android:layout_weight="1"
                    android:text="data2"
                    android:textSize="@dimen/info_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="@dimen/item_title_width"
                    android:layout_height="wrap_content"
                    android:text="Repetitions"
                    android:textSize="@dimen/info_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvRepetitions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_context_margin_left"
                    android:layout_weight="1"
                    android:text="data3"
                    android:textSize="@dimen/info_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="@dimen/item_title_width"
                    android:layout_height="wrap_content"
                    android:text="Damage"
                    android:textSize="@dimen/info_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDamage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_context_margin_left"
                    android:layout_weight="1"
                    android:text="data3"
                    android:textSize="@dimen/info_size" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>